  },
  "dependencies": {
    "@luontola/react-cache": "^2.0.0-alpha.2019-05-02",
    "@reach/router": "^1.2.1",
    "alphanum-sort": "^1.0.2",
    "auth0-js": "^9.11.3",
    "axios": "^0.19.0",
    "clipboard": "^2.0.4",
    "core-js": "^3.2.1",
    "date-fns": "^2.4.1",
