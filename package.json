    "ol": "^6.0.1",
    "prop-types": "^15.7.2",
    "purecss": "^1.0.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-error-boundary": "^1.2.5",
    "react-intl": "^3.3.2",
    "regenerator-runtime": "^0.13.3"
